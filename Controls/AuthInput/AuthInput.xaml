<UserControl x:Class="Controls.AuthInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <Grid Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Auth:" Margin="20,0,0,0"/>
            <ComboBox x:Name="AuthComboBox" Width="100">
                <ComboBoxItem Content="None"/>
                <ComboBoxItem Content="Bearer"/>
            </ComboBox>
            <TextBlock Text="TokenPath:" Margin="10,0,0,0"/>
            <TextBox x:Name="TokenPathTextBox" Width="200"/>
        </StackPanel>
    </Grid>
</UserControl>
